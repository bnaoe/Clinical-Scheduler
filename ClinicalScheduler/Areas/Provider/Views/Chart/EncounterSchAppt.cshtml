@model Scheduler.Models.ViewModels.EncounterVM;


<div>
   <partial name="_EncounterDetails" model="Model"/>
</div>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h4 class="primary">Chart Details</h4>
        </div>
    </div>     

    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link active" data-bs-toggle="tab" href="#note">Notes</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#order">Orders</a>
      </li>
    </ul>

    <div id="myTabContent" class="tab-content">
      <div class="tab-pane fade active show" id="note">
        <div class="container bg-white border">
        <div class="col-12 bg-white text-end mb-2 mt-2">
            <a asp-area="Provider" asp-controller ="Document" asp-action="Upsert" asp-route-encntrId="@Model.Encounter.Id" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; New Document
            </a> 
        </div>
            <table id ="tblData" class="display compact nowrap"d" style="width:100%">
                <thead>
                    <tr>
                        <th>Documentation ID</th>
                        <th>Creation Dt/Tm</th>
                        <th>Provider</th>
                        <th>Note Title</th>
                        <th>Document Type</th>
                        <th>Status</th>
                        <th>InError</th>
                        <th>Actions</th>
                    </tr>
                </thead>
            </table>      
        </div> 
    </div>      
     <div class="tab-pane fade active" id="order" >
         <div class="container bg-white border">
           <table id ="tblData2" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>FIN</th>
                    <th>Admit</th>
                    <th>Last Name</th>
                    <th>Date of Birth</th>
                    <th>Deleted</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
        </div>
     </div>


   </div>   
</div>
@section Scripts{
    <script src="~/js/EncounterDetails.js"></script>
}