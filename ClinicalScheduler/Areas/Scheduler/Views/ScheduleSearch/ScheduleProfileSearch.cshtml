@model Scheduler.Models.ViewModels.PatientVM

<partial name="_PatientDetails" model="Model" />

 <div class="border p-3 mt-4 row">
        <div class="row pb-2">
            <h4 class="text-primary">Schedule Search</h4>
            <hr/>
        </div>
        <div class="mb-3 col-3" >
            <label>Location</label>
            <input id="loc" name="loc" class="form-control"/>
        </div>
        <div class="mb-3 col-3">
            <label>First Name</label>
            <input id="firstName" name="firstName" class="form-control"/>
        </div>
        <div class="mb-3 col-3">
            <label>Last Name</label>
            <input id="lastName" name="lastName" class="form-control"/>
        </div>
        <div class="mb-3 col-3 align-self-end">
            <button id="find" class="btn btn-primary">
                <i class="bi bi-binoculars"></i> &nbsp; Find
            </button> 
        </div>
</div>
<div class="container p-3">
 <h4 class="primary">Schedule List</h4>
<table id ="tblData" class="display compact nowrap" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Location Name</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Specialization</th>
                <th>Actions</th>
            </tr>
        </thead>
    
    </table>
</div>
@section Scripts{
    @{
        <script src="~/js/ScheduleProfileSearchResults.js"></script>

    }
}