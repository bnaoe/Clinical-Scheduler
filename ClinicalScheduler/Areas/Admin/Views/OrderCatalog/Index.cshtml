@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4 p-3 border">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="primary">Order Catalog</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller ="OrderCatalog" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New
            </a> 
        </div>
    </div>


<table id ="tblData" class="display compact nowrap" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Order Type</th>
            <th>Deleted</th>
            <th>Actions</th>
        </tr>
    </thead>
    
</table>
</div>

@section Scripts{
    <script src="~/js/OrderCatalog.js"></script>
}


