@model Scheduler.Models.CodeSet

<form method="post" asp-action="Upsert">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2 border">
            <h2 class="text-primary">@(Model.Id!=0?"Update":"Create") Code Set</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" rows="3" class="form-control"></textarea>
            <span asp-validation-for ="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="IsDeleted">Deleted</label>
            <input asp-for="IsDeleted" type="checkbox" data-val="true" data-val-required="IsDeleted" id="IsDeleted" name="IsDeleted" value="true" />               
        </div>
        <div class="col-12">
			<button type="submit" class="btn btn-primary" style="width:150px">@(Model.Id!=0?"Update":"Create")</button>
            <a asp-controller="CodeSet" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Back to list
            </a>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
   <script>
    tinymce.init({
      selector: 'textarea',
      plugins: 'advlist autolink lists link image charmap print preview hr anchor pagebreak',
      toolbar_mode: 'floating',
    });
  </script>
}